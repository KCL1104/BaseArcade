# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Database Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Blockchain Configuration
ETHEREUM_RPC_URL=your_ethereum_rpc_url
PRIVATE_KEY=your_private_key
CHROMA_CONTRACT_ADDRESS=your_chroma_contract_address
FOUNTAIN_CONTRACT_ADDRESS=your_fountain_contract_address

# Security Configuration
# Comma-separated list of API keys for authentication
API_KEYS=dev-key-1,dev-key-2,prod-key-1

# Comma-separated list of allowed IP addresses (supports CIDR notation)
# Leave empty to disable IP whitelist
ALLOWED_IPS=127.0.0.1,::1,192.168.1.0/24

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
GAME_ACTION_LIMIT_WINDOW_MS=60000
GAME_ACTION_LIMIT_MAX_REQUESTS=10
AUTH_LIMIT_WINDOW_MS=900000
AUTH_LIMIT_MAX_REQUESTS=5

# Request Size Limits
MAX_REQUEST_SIZE=10mb
MAX_JSON_SIZE=1mb
MAX_URL_ENCODED_SIZE=1mb

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://your-domain.vercel.app
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# WebSocket Configuration
WS_CONNECTION_LIMIT=5
WS_CONNECTION_TIMEOUT=30000

# Security Headers
CSP_REPORT_URI=/api/csp-report
HSTS_MAX_AGE=31536000

# Development Configuration
DEBUG=false
VERBOSE_LOGGING=false